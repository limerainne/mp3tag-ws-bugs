# VOCAL
FindLine "<th scope=\"row\">보컬</th>" 1 1
Unspace
if "<th scope=\"row\">보컬</th>"
    MoveLine +1   # move to one line above first item
    do
        MoveLine +1
        Unspace
        RegexpReplace "<a\s+href", "<a href"
        
        if "<a href=\"https://music.bugs.co.kr/"
          # fetch artist ID and Name
          # - ID
          OutputTo "BugsVocalId"
          ifoutput "BugsVocalId"
              Say ";"
          endif
          FindInLine "artist/"
          SayRegexp "[0-9]+" "" "?"

          # - name
          OutputTo "Vocal"
          ifoutput "Vocal"
              Say ", "
          endif
          # - tidy tag
          # : add space between opening parentheses
          RegexpReplace "(\w{2,})\(" "$1 ("
          # NOTE require 2+ chars. to avoid 'f(x)' -> 'f (x)'
          RegexpReplace "\" >" "\">"
          FindInLine ">"
          SayUntil "</a>"
        else
          # - ID (nonexist)
          OutputTo "BugsVocalId"
          ifoutput "BugsVocalId"
              Say ";"
          endif
          Say "_"
          
          # - name
          OutputTo "Vocal"
          ifoutput "Vocal"
              Say ", "
          endif
          Unspace
          RegexpReplace "<[^>]+?>" ""
          SayRest
        endif

        MoveLine +1
        Unspace
    while ","
endif

